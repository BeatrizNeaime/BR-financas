        }

        .botao button:hover {
            background-color: #49b99d;
        }

        .btns {
            width: 30%;
        }

        .btntextos:hover {
            cursor: pointer;
        }

        .container {
            height: 89vh !important;
        }

        .deletar {
            color: #cc4934;
            text-decoration: none;
            transition: 1s;
        }

        .deletar:hover {
            color: #cc4934;
            transform: rotateX(80deg);
        }

        .dowArrow {
            background-color: royalblue;
            align-items: center;
            display: flex;
            height: 100%;
            justify-content: space-evenly;
        }

        .e {
            color: #7f7f7f;
        }

        .e:hover {
            color: #49b99d;
        }

        .entrada {
            color: #33cc95;
        }

        .excluirbtn,
        .excluirbtn:hover {
            color: #fefefe;
            text-decoration: none;
        }

        .excluirbtn button {
            background-color: #7f7f7f;
        }

        footer {
            display: none;
        }

        .linha {
            background-color: rgba(254, 254, 254, .6);
            margin-bottom: 1rem;
        }

        .link-btn {
            background-color: #33cc95 !important;
