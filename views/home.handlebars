<div class="container text-center" style="
        margin-top: 2rem;
        width: 65%;">
    <div class="row" style="
        gap: 15px;
    ">
        <div class="col" style="
        background-color: #fefefe;
        border-radius: 6px;
        ">
            <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                <div class="txt" style="
                        text-align: center;
                    ">
                    <p style="
                            font-family: 'Roboto Mono', monospace;
                        ">Entradas</p>
                </div>

                <div class="icon">
                    <box-icon name='up-arrow-circle' color="#33cc95"></box-icon>
                </div>
            </div>
            <div class="number" style="
                    width: 90%;
                ">
                <p style="
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                        color: #33cc95;
                    ">R$ {{{entradas}}}</p>
            </div>
        </div>
        <div class="col" style="background-color: #fefefe; border-radius: 6px; width: 33%;">
            <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                <div class="txt" style="text-align: center;">
                    <p style="font-family: 'Roboto Mono', monospace;">Saídas</p>
                </div>

                <div class="icon">
                    <box-icon name='down-arrow-circle' color="#cc4934"></box-icon>
                </div>
            </div>

            <div class="number" style="
                    width: 90%;
                ">
                <p style="
                        color: #cc4934;
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                ">R$ {{{saidas}}}</p>
            </div>

        </div>

        {{#if helper}}
        <div class="col" style="
        background-color: #33cc95; border-radius: 6px;
        ">
            <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                <div class="txt" style="
                        text-align: center;
                    ">
                    <p style="
                            color: #fefefe;
                            font-family: 'Roboto Mono', monospace;
                        ">Total</p>
                </div>

                <div class="icon">
                    <box-icon name='transfer-alt' color="#fefefe"></box-icon>
                </div>
            </div>
            <div class="number" style="
                    width: 90%;
                ">
                <p style="
                        color: #fefefe;
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                    ">R$ {{{total}}}</p>
            </div>
            {{else}}
            <div class="col {{classe}}" style="
        background-color: #cc4934; border-radius: 6px;
        ">
                <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                    <div class="txt" style="
                        text-align: center;
                    ">
                        <p style="
                            color: #fefefe;
                            font-family: 'Roboto Mono', monospace;
                        ">Total</p>
                    </div>

                    <div class="icon">
                        <box-icon name='transfer-alt' color="#fefefe"></box-icon>
                    </div>
                </div>
                <div class="number" style="
                    width: 90%;
                ">
                    <p style="
                        color: #fefefe;
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                    "> R$ {{{total}}}</p>
                </div>
                {{/if}}

            </div>

            {{!------- BOTAO ADICIONAR -------}}

            <!-- Button trigger modal -->
            <div class="botao">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <a href="/adicionar/" class="link">Nova Transação</a>
                </button>
            </div>
            {{!------- TABELA -------}}

            <div class="table-responsive" style="
            margin: 4rem 0;
            width: 100%;
        ">
                <table class="table">
                    <thead>
                        <tr style="
                        color: #7f7f7f;
                    ">
                            <th scope="col" style="text-align: left"><i class='bx bx-edit-alt'></i> Título</th>
                            <th scope="col" style="text-align: left"><i class='bx bx-credit-card-alt'></i> Valor</th>
                            <th scope="col" style="text-align: left"><i class='bx bx-checkbox-checked'></i> Categoria
                            </th>
                            <th scope="col" style="text-align: left"><i class='bx bxs-calendar'></i> Data</th>
                            <th scope="col" style="text-align: left"><i class='bx bx-time'></i> Hora</th>
                            <th scope="col" style="text-align: left" class="oculto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if listaLancamentos}}
                        {{#each listaLancamentos}}
                        <tr class="linha">
                            <td>{{descricao}}</td>
                            {{#if tipo}}
                            <td><span style="color: #33cc95;">R${{valor}}</span></td>
                            {{else}}
                            <td><span style="color: #cc4934;">R${{valor}}</span></td>
                            {{/if}}
                            <td>{{categoria}}</td>
                            <td>{{dia}}</td>
                            <td>{{hora}}</td>
                            <td class="oculto">
                                <a href="/delete/produto/{{id}}" class="deletar">
                                    <i class='bx bx-x-circle'></i>
                                </a>
                                <a href="/editar/{{id}}" class="deletar e">
                                    <i class='bx bxs-edit'></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>

        <style>
            .botao {
                align-items: center;
                display: flex;
                justify-content: flex-end;
                margin: 2rem 0;
            }

            .botao button {
                background-color: #33cc95;
                border: none;
            }

            .botao button:hover {
                background-color: #49b99d;
            }

            .btntextos:hover {
                cursor: pointer;
            }

            .container{
                height: 89vh !important;
            }

            .deletar {
                color: #cc4934;
                text-decoration: none;
                transition: 1s;
            }

            .deletar:hover {
                color: #cc4934;
                transform: rotateX(80deg);
            }

            .dowArrow {
                background-color: royalblue;
                align-items: center;
                display: flex;
                height: 100%;
                justify-content: space-evenly;
            }

            .e {
                color: #7f7f7f;
            }

            .e:hover {
                color: #49b99d;
            }

            .entrada {
                color: #33cc95;
            }

            .excluirbtn,
            .excluirbtn:hover {
                color: #fefefe;
                text-decoration: none;
            }

            .excluirbtn button {
                background-color: #7f7f7f;
            }

            footer{
                display: none;
            }

            .linha {
                background-color: rgba(254, 254, 254, .6);
                margin-bottom: 1rem;
            }

            .link-btn {
                background-color: #33cc95 !important;
                color: #fefefe;
                text-decoration: none;
            }

            .link {
                color: #fefefe;
                text-decoration: none;
            }

            .link:hover {
                color: #fefefe;
            }

            .oculto {
                color: #cc4934;
                transition: ease 1s;
            }

            .oculto:hover {
                cursor: pointer;
            }

            .row-input {
                align-items: center;
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                text-align: center;
                width: 80%
            }

            .saida {
                color: #cc4934;
            }

            table {
                border-spacing: 2rem;
            }

            tbody {
                text-align: left;
            }

            thead tr {
                margin-bottom: 1rem;
            }

            tr {
                border-radius: 6px;
                row-gap: 1rem;
            }

            .Ttitulo {
                align-itens: center;
                display: flex;
                flex-direction: column;
                margin-bottom: 16px;
                text-align: left;
                width: 80%;
            }


            @media screen and (max-width: 425px) {
                .botao {
                    justify-content: center;
                }

                .table-responsive {
                    width: 90vw !important;
                }
            }
        </style>