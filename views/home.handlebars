<div class="container text-center" style="
        margin-top: 2rem;
        width: 65%;">
    <div class="row" style="
        gap: 15px;
    ">
        <div class="col" style="
        background-color: #fefefe;
        border-radius: 6px;
        ">
            <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                <div class="txt" style="
                        text-align: center;
                    ">
                    <p style="
                            font-family: 'Roboto Mono', monospace;
                        ">Entradas</p>
                </div>

                <div class="icon">
                    <box-icon name='up-arrow-circle' color="#33cc95"></box-icon>
                </div>
            </div>
            <div class="number" style="
                    width: 90%;
                ">
                <p style="
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                        color: #33cc95;
                    ">R$ {{{entradas}}}</p>
            </div>
        </div>
        <div class="col" style="background-color: #fefefe; border-radius: 6px; width: 33%;">
            <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                <div class="txt" style="text-align: center;">
                    <p style="font-family: 'Roboto Mono', monospace;">Saídas</p>
                </div>

                <div class="icon">
                    <box-icon name='down-arrow-circle' color="#cc4934"></box-icon>
                </div>
            </div>

            <div class="number" style="
                    width: 90%;
                ">
                <p style="
                        color: #cc4934;
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                ">R$ {{{saidas}}}</p>
            </div>

        </div>

        {{#if helper}}
        <div class="col" style="
        background-color: #33cc95; border-radius: 6px;
        ">
            <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                <div class="txt" style="
                        text-align: center;
                    ">
                    <p style="
                            color: #fefefe;
                            font-family: 'Roboto Mono', monospace;
                        ">Total</p>
                </div>

                <div class="icon">
                    <box-icon name='transfer-alt' color="#fefefe"></box-icon>
                </div>
            </div>
            <div class="number" style="
            
                    width: 90%;
                ">
                <p style="
                        color: #fefefe;
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                    ">R$ {{{total}}}</p>
            </div>
            {{else}}
            <div class="col {{classe}}" style="
        background-color: #cc4934; border-radius: 6px;
        ">
                <div class="textos" style="
                    align-itens: center;
                    display: flex;
                    justify-content: space-between;
                    margin: 0 auto;
                    padding: .8rem;
                    width: 90%;
                    
                ">
                    <div class="txt" style="
                        text-align: center;
                    ">
                        <p style="
                            color: #fefefe;
                            font-family: 'Roboto Mono', monospace;
                        ">Total</p>
                    </div>

                    <div class="icon">
                        <box-icon name='transfer-alt' color="#fefefe"></box-icon>
                    </div>
                </div>
                <div class="number" style="
                    width: 90%;
                ">
                    <p style="
                        color: #fefefe;
                        font-family: 'Mulish', sans-serif;
                        font-size: 30px;
                        font-weight: 300;
                    "> R$ {{{total}}}</p>
                </div>
                {{/if}}

            </div>
            {{!------- BOTAO ADICIONAR -------}}

            <!-- Button trigger modal -->
            <div class="botao">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal">
                    Nova Transação
                </button>
            </div>

            <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Adicionar Transação</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/adicionar" method="post">
                                <div class="caixote">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput"
                                            placeholder="name@example.com" name="titulo" value="{{titulo}}" required>
                                        <label for="floatingInput">Título da Transação</label>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">Data</span>
                                        <input type="date" class="form-control" placeholder="Username"
                                            aria-label="Username" aria-describedby="basic-addon1" name="dia"
                                            value="{{dia}}" required>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">Hora</span>
                                        <input type="time" class="form-control" placeholder="Username"
                                            aria-label="Username" aria-describedby="basic-addon1" name="hora"
                                            value="{{hora}}" required>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="number" class="form-control" id="floatingInput"
                                            placeholder="name@example.com" name="valor" value="{{valor}}" required>
                                        <label for="floatingInput">Valor</label>
                                    </div>
                                    <div class="cat">
                                        <select class="form-select" aria-label="Default select example" name="categoria"
                                            required>
                                            <option disabled selected>Categoria</option>
                                            <option value="Alimentação">Alimentação</option>
                                            <option value="Freelancer">Freelancer</option>
                                            <option value="Lazer">Lazer</option>
                                            <option value="Salário">Salário</option>
                                            <option value="Saúde">Saúde</option>
                                            <option value="Supermercado">Supermercado</option>
                                        </select>
                                    </div>
                                    <div class="tipo-transacao otacaixa">
                                        <div class="aux">
                                            <label for="tipo">Tipo de Transação</label>
                                            <div class="form-check">
                                                <label class="form-check-label" for="flexCheckChecked">
                                                    Saída
                                                </label>
                                                {{#if tipo}}
                                                <input class="form-check-input" type="checkbox" value="0" name="tipo"
                                                    id="flexCheckChecked" checked>
                                                {{else}}
                                                <input class="form-check-input" type="checkbox" value="0" name="tipo"
                                                    id="flexCheckChecked">
                                                {{/if}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Adicionar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            {{!------- TABELA -------}}
            {{#if msg}}
            <div class="alert alert-success" role="alert">
                {{msg}}
            </div>
            {{/if}}

            <div class="table-responsive" style="
            margin: 4rem 0;
            width: 100%;
        ">
                <table class="table">
                    <thead>
                        <tr style="
                        color: #7f7f7f;
                    ">
                            <th scope="col" style="text-align: left"><i class='bx bx-edit-alt'></i> Título</th>
                            <th scope="col" style="text-align: left"><i class='bx bx-credit-card-alt'></i> Valor</th>
                            <th scope="col" style="text-align: left"><i class='bx bx-checkbox-checked'></i> Categoria
                            </th>
                            <th scope="col" style="text-align: left"><i class='bx bxs-calendar'></i> Data</th>
                            <th scope="col" style="text-align: left"><i class='bx bx-time'></i> Hora</th>
                            <th scope="col" style="text-align: left" class="oculto"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if listaLancamentos}}
                        {{#each listaLancamentos}}
                        <tr class="linha">
                            <td>{{descricao}}</td>
                            {{#if tipo}}
                            <td><span style="color: #33cc95;">R${{valor}}</span></td>
                            {{else}}
                            <td><span style="color: #cc4934;">R${{valor}}</span></td>
                            {{/if}}
                            <td>{{categoria}}</td>
                            <td>{{dia}}</td>
                            <td>{{hora}}</td>
                            <td class="oculto">
                                <a href="/delete/produto/{{id}}" class="deletar">
                                    <i class='bx bx-x-circle'></i>
                                </a>
                                <a href="/editar?id={{id}}" class="deletar e">
                                    <i class='bx bxs-edit'></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <style>
