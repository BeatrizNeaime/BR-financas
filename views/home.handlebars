        }

        table {
            border-spacing: 2rem;
        }

        tbody {
            text-align: left;
        }

        thead tr {
            margin-bottom: 1rem;
        }

        tr {
            border-radius: 6px;
            row-gap: 1rem;
        }

        .Ttitulo {
            align-itens: center;
            display: flex;
            flex-direction: column;
            margin-bottom: 16px;
            text-align: left;
            width: 80%;
        }

        @media screen and (max-width: 1023px) {

            .contianer{
                width: 100%;
            }
            .botao {
                justify-content: center;
            }

            .table-responsive {
                width: 90vw !important;
            }
        }
    </style>